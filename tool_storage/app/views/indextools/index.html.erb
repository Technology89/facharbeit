<p id="notice"><%= notice %></p>

<h1>Werkzeug von <%= @employee.Vorname %> <%= @employee.Nachname %></h1>

<table>
  <thead>
    <tr>
      <th>Ausgeliehen</th>
      <th>Ausgegeben am</th>
      <th>Werkzeug</th>
      <th>Barcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @indextools.each do |indextool| %>
      <tr>
        <td><%= indextool.ausgeliehen %></td>
        <td><%= indextool.ausgegeben_am %></td>
        <td><%= @tools.find_by_id(indextool.tool_id).hersteller %> <%= @tools.find_by_id(indextool.tool_id).modell %></td>
        <td><%= @tools.find_by_id(indextool.tool_id).barcode %></td>
        <td><%= link_to 'Show', employee_indextool_path(@employee.id, indextool.id) %></td>
        <td><%= link_to 'Edit', edit_employee_indextool_path(@employee.id, indextool.id) %></td>
        <td><%= link_to 'Destroy', employee_indextool_path(@employee.id, indextool.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

