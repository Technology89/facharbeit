<h3>Maschinen von <%= full_name(@employee) %></h3>

<table>
  <thead>
    <tr>
      
      <th>Ausgegeben am</th>
      <th>Ausgegeben von</th>
      <th>Machine</th>
      <th>Barcode</th>
      <th>Ausgeliehen</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @indexmachines.each do |indexmachine| %>
      <tr>
        <td><%= indexmachine.ausgegeben_am %></td>
        <td><%= indexmachine.ausgegeben_von %></td>
        <td><%= @machines.find_by(id: indexmachine.machine_id).hersteller %> <%= @machines.find_by(id:indexmachine.machine_id).modell %></td>
        <td><%= @machines.find_by(id: indexmachine.machine_id).barcode %></td>
        <td><%= bool_to_german(indexmachine.ausgeliehen) %></td>
        <td><center><%= link_to "<i class='fi-trash icon-red'></i>".html_safe, employee_indexmachine_path(@employee.id, indexmachine.id), method: :delete, data: { confirm: 'Are you sure?' } %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<%= link_to 'Neue Maschine ausgeben', new_employee_indexmachine_path(@employee.id) %>
</p>
<h3>Werkzeug von <%= full_name(@employee) %></h3>

<table>
  <thead>
    <tr>
      <th>Ausgegeben am</th>
      <th>Ausgegeben von</th>
      <th>Werkzeug</th>
      <th>Barcode</th>
      <th>Rückgabe</th>
      <th>Verlust</th>
    </tr>
  </thead>

  <tbody>
    <% @indextools.each do |indextool| %>
      <tr>
        <td><%= indextool.ausgegeben_am %></td>
        <td><%= indextool.ausgegeben_von %></td>
        <td><%= @tools.find_by_id(indextool.tool_id).hersteller %> <%= @tools.find_by_id(indextool.tool_id).modell %></td>
        <td><%= @tools.find_by_id(indextool.tool_id).barcode %></td>        
        <td><center><%= link_to "<i class='fi-trash icon-red'></i>".html_safe, employee_indextool_path(@employee.id, indextool.id), method: :delete, data: { confirm: 'Sind sie sicher das sie den Eintrag löschen möchten?' } %></center></td>
        <td><center><%= link_to "<i class='fi-trash icon-red'></i>".html_safe, remove_employee_indextool_path(@employee.id, indextool.id), data: { confirm: 'Sind sie sicher das sie den Eintrag löschen möchten?' } %></center></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<%= link_to 'Neues Werkzeug ausgeben', new_employee_indextool_path(@employee.id) %>
</p>

<%= link_to 'Zurück', :back %>
