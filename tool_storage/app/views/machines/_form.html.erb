<%= render "shared/errors", object: @machine %>
<%= form_for(@machine, data: {abide: ''}) do |f| %>  
  <%= f.hidden_field :barcode %>
  <div class="row">
    <div class="small-3 medium-3 large-3 columns">
      <%= f.label :hersteller %>
    </div>
    <div class="small-9 medium-9 large-9 columns">
      <%= f.text_field :hersteller, required: '', pattern: 'long_field' %>
      <%= content_tag(:small, "Bitte geben sie einen gültigen Hersteller ein", class: "error") %>
    </div>
  </div>
  <div class="row">
    <div class="small-3 medium-3 large-3 columns">
      <%= f.label :modell %>
    </div>
    <div class="small-9 medium-9 large-9 columns">
      <%= f.text_field :modell, required: '', pattern: 'long_field' %>
      <%= content_tag(:small, "Bitte geben sie einen gültiges Modell ein", class: "error") %>
    </div>
  </div>
  <br>
  <div class="actions">
    <div class="row">
      <div class="small-12 medium-12 large-12 columns">
        <% if params[:action] == "edit" %>
          <%= f.submit "Bearbeiten", class: 'button small radius' %>          
        <% else %>
          <%= f.submit "Anlegen", class: 'button small radius' %>
        <% end %> 
      </div>
    </div>
  </div>
<% end %>
