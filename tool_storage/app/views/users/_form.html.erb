<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
     <% if params[:action] == "new" %>
      <%= f.submit "Anlegen" %>
    <% else %>
      <%= f.submit "Bearbeiten" %>
    <% end %>
  </div>
<% end %>
