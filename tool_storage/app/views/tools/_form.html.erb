<%= form_for(@tool) do |f| %>
  
  <%= f.hidden_field :barcode %>
  <%= f.hidden_field :anzahl_ersatz %>
  <div class="field">
    <%= f.label :hersteller %><br>
    <%= f.text_field :hersteller %>
  </div>
  <div class="field">
    <%= f.label :modell %><br>
    <%= f.text_field :modell %>
  </div>
 
  <div class="field">
    <%= f.label :lagerbestand %><br>
    <%= f.number_field :lagerbestand %>
  </div>
  <div class="field">
    <%= f.label :mindestbestand %><br>
    <%= f.number_field :mindestbestand %>
  </div> 
  <div class="actions">
    <% if params[:action] == "new" %>
      <%= f.submit "Anlegen" %>
    <% else %>
      <%= f.submit "Bearbeiten" %>
    <% end %>
  </div>
<% end %>
