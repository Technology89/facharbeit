<%= form_for [@employee, @indexmachine] do |f| %>


    <%= f.hidden_field :employee_id %>
      <%= f.hidden_field :ausgegeben_am %>
    <div class="row">
      <div class="medium-3 columns">
       <%= label_tag :barcode %>
      </div>
      <div class="medium-9 columns">
       <%= text_field_tag :barcode, '', autofocus: true %>
      </div>
    </div>  
     <div class="row">
      <div class="medium-3 columns">
       <%= f.label "Ausleihen" %>
      </div>
      <div class="medium-9 columns">
       <%= f.check_box :ausgeliehen %>
      </div>
    </div> 
      <div class="row">
      <div class="medium-12 columns">
        <%= f.submit %>
      </div>
    </div>  
  <% end %> 