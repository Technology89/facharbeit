<%# navigation styled for Zurb Foundation 5 %>
<table class="header">
  <tr>
    <td>
      <div align="left"><%= image_tag("stadtwerke_logo.png", width: '270') %></div>
    </td>
    <td>
      <div align="right"><%= image_tag("wtnet_logo.gif", width: '190') %></div>
    </td>
  </tr>
</table>  
<nav class="top-bar" data-topbar>  
  <div class="top-bar-section">
    <% if current_user %>    
    <ul>
      <li class="has-dropdown">
       <%= link_to  ("Benutzer <i class='fi-torsos-male-female'></i>".html_safe).html_safe, users_path %>
        <ul class="dropdown">
          <li><%= link_to "Neuer Benutzer", new_user_path %></li>                   
        </ul>
      </li>
    </ul>
    <ul>
      <li class="has-dropdown">
       <%= link_to ("Mitarbeiter <i class='fi-torsos-all'></i>".html_safe).html_safe, employees_path %>
        <ul class="dropdown">
          <li><%= link_to "Neuer Mitarbeiter", new_employee_path %></li>                   
        </ul>
      </li>
    </ul>
    <ul>
      <li class="has-dropdown">
       <%= link_to ("Werkzeuge <i class='fi-wrench'></i>".html_safe), tools_path %>
        <ul class="dropdown">
          <li><%= link_to "Neues Werkzeug", new_tool_path %></li>
          <li><%= link_to "Nachbestellung", reorder_path %></li> 
          <li><%= link_to "Auffüllen", refill_path %></li>                    
        </ul>
      </li>
    </ul>
    <ul>
      <li class="has-dropdown">
       <%= link_to ("Maschinen <i class='fi-widget'></i>".html_safe), machines_path %>
        <ul class="dropdown">
          <li><%= link_to "Neue Maschine", new_machine_path %></li>   
          <li><%= link_to "Überfällig", overdue_path %></li>                    
        </ul>
      </li>
    </ul>
    <% end %>
    <ul class="right">
      <% if current_user && current_employee %>
       <ul>
        <li class="has-dropdown">
         <%= link_to ("#{full_name_with_nr(current_employee)} <i class='fi-folder'></i>".html_safe), employee_path(current_employee) %>
          <ul class="dropdown">
            <li><%= link_to "Maschine ausgeben", new_employee_indexmachine_path(current_employee) %></li>
            <li><%= link_to "Werkzeug ausgeben", new_employee_indextool_path(current_employee) %></li>  
            <li><%= link_to "Kartei schließen", employee_session_path, method: :delete %></li>                  
          </ul>
        </li>
      </ul>        
      <% end %>
      <% if current_user %>
        <% if current_employee.blank? %>  
        <li><%= link_to ("Kartei öffnen <i class='fi-archive'></i>".html_safe), begin_path %></li>
        <% end %>     
        <li><%= link_to ("Ausloggen <i class='fi-x'></i>".html_safe), session_path, method: :delete %></li>
      <% else %>
      <li><%= link_to "Einloggen", signin_path %></li>     
      <% end %>
    </ul>
  </div>
</nav>
